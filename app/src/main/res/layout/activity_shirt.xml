<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shirt">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/rcolorshirt"
        android:id="@+id/shirt"
        />

    <TextView
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:layout_below="@id/shirt"
        android:id="@+id/tittt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Players Men's Solid Casual Spread Shirt"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="799/- only"
        android:layout_below="@id/tittt"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:id="@+id/price"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/avail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available in Sizes:"
        android:textColor="@android:color/black"
        android:layout_below="@id/price"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:layout_toRightOf="@id/avail"
        android:text="S          M              L            XL"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/picc"
        android:layout_marginTop="15dp"
        android:layout_below="@id/avail"
        android:src="@drawable/kefs"/>

    <TextView
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        android:layout_below="@id/picc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to Payment"
        android:textStyle="normal"/>
</RelativeLayout>